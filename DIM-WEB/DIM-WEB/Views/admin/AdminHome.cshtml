
@{
    ViewBag.Title = "AdminHome";
}



<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <title>Album example for Bootstrap</title>



</head>

<body>


    <main role="main">

        <section class="jumbotron text-center header" >
            <div class="container">
                <h3 class="text-white fa-bold">Bienvenido al Administrador del sistema DIM</h3>
                <p class=" text-white">Aqui se podrán gestionar las Campañas, Usuarios y visualizar estadísticas del sistema DIM</p>
              
            </div>
        </section>

        <div class="album py-5 bg-light">
            <div class="container">

                <div class="row">


                    <div class="col-md-4 p-5">

                        <div class="card box-shadow d-flex justify-content-between align-items-center zoom">

                            <h2 class=" fa-bold">Gestionar Campañas</h2><br>
                            <a href="../admin/Campania" target="_blank">
                                <img class="card-img-top img-dim" src="../Content/img/campania.jpg" alt="Card image cap">
                            </a>




                            <div class="card-body box-shadow">
                                <h4 class=" fw-bolder">
                                    En esta sección se podrán visualizar/gestionar/dar de alta todas las
                                    campañas de vacunación, castración y deparacitación
                                </h4>

                            </div>
                        </div>
                    </div>



                    <div class="col-md-4 p-5">

                        <div class="card  box-shadow d-flex justify-content-between align-items-center zoom">

                            <h2 class=" fa-bold">Gestionar Veterinarios</h2><br>
                            <a href="../admin/Veterinaria" target="_blank">
                                <img class="card-img-top img-dim" src="../Content/img/veterinario.jpg" alt="Card image cap">

                            </a>


                            <div class="card-body  box-shadow">
                                <h4 class="fw-bolder">
                                    En esta sección se podrán gestionar los usuarios veterinarios del sistema DIM, validar matriculas y revisar los datos correspondientes
                                </h4>

                            </div>

                        </div>
                    </div>



                    <div class="col-md-4 p-5">

                        <div class="card  box-shadow d-flex justify-content-between align-items-center zoom">

                            <h2 class=" fa-bold">Gestionar de Mascotas Peligrosas</h2><br>
                            <a href="../admin/MascotaPeligrosa" target="_blank">
                                <img class="card-img-top img-dim" src="../Content/img/mascota-peligrosa.jpg" alt="Card image cap">

                            </a>


                            <div class="card-body  box-shadow">
                                <h4 class="fw-bolder">
                                    En esta sección se podrán validar las razas de animales peligrosas, y verificar los datos asociados del usuario (dueño) que registró dihca mascota
                                </h4>

                            </div>

                        </div>
                    </div>



                </div>
                </div>
            </div>
     

    </main>


</body>
</html>


<style>

    .zoom {
        background-color: #e9ecef;
        color: dimgrey;
        padding: 3rem;
        transition: transform .5s; /* Animation */
        margin: 0 auto;
    }

        .zoom:hover {
            transform: scale(1.1);
            transition: 0.6s;/* (150% zoom - Note: if the zoom is too large, it will go outside of the viewport) */
            background-color: #84a39c;
            color: white;
            cursor: pointer;
        }

        .zoom:hover .text-dim {        
            color: white;          
        }

    .header {
        background-color: #84a39c;
    }

    .jumbotron-heading {
        color: white;
    }

    .text-grey{
        color: dimgrey;
    }

    .text-dim {
        color: #84a39c;
    }

    .img-dim {
        width: 30rem;
        height: 18rem;
    }

</style>