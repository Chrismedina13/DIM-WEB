
@{
    ViewBag.Title = "Admin";
}

<!DOCTYPE html>
<html>


<head>

    <link href="~/Content/admin.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">
    <script src="~/Scripts/dim-admin.js"></script>
</head>


<body style="        background-image: url('../Content/img/dim-background.png'); object-fit: cover;">



    <div class="wrapper fadeInDown" id="login">

        <div id="formContent">
            <br>
            <br>
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first" style=" text-align:center;">
                <h2>Ingreso al administrador de DIM</h2>
                <img src="~/Content/img/logo-dim.png" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form -->
            <form>
                <input type="text" id="email" class="fadeIn second" name="login" placeholder="Email">
                <input type="text" id="password" class="fadeIn third" name="login" placeholder="Contraseña">
                <br>
                <input type="submit" id="submit" class="fadeIn fourth" value="Log In">
                <div id="alerta-login-incorrecto" class="p-3 d-none"> <div class="alert alert-danger" role="alert"> Los datos ingresados no son validos. </div> </div>
            </form>

            <!-- Remind Passowrd -->
            <div id="formFooter">
                <a class="link" href="#">Olvidé mi contraseña</a>
            </div>

        </div>
    </div>

</body>
</html>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>

    //Urls
    var urlValidarAdmin = '@Html.Raw(Url.Action("ValidarAdmin", "Admin"))';

    $(document).ready(function () {

        $("#submit").click(validarAdmin);
    });

    function validarAdmin(){
        let email = $("#email").val();
        let password = $("#password").val();
        if (email != '' && password != '') {

            $.ajax({
                url: urlValidarAdmin,
                type: 'POST',
                data: { "email": email, "password": password },
                success: function (data) {

                    if (data.Respuesta == "OK") {
                        alert("OK");
                    } else {
                        //Enviar mensaje de error
                    }
                },
                error: function (xhr, textStatus, errorThrown) {

                    //Notificar Error
                },
            });
        }
    }


</script>